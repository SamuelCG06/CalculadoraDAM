<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    android:backgroundTint="#1D1C1C"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="387dp"
        android:layout_height="528dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonbr1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/naranja"
                android:text="("
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonbr2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/naranja"
                android:text=")"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/naranja"
                android:text="/"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonPerc"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#FF5722"
                android:text="%"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#0092D3"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#0092D3"
                android:text="8"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#0092D3"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/naranja"
                android:text="+"
                android:textColorLink="#673AB7"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#0092D3"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#0092D3"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#0092D3"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonMult"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/naranja"
                android:text="*"
                android:textColorLink="#673AB7"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:textSize="24sp"
                android:backgroundTint="#0092D3"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:textSize="24sp"
                android:backgroundTint="#0092D3"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:textSize="24sp"
                android:backgroundTint="#0092D3"
                android:text="3" />

            <Button
                android:id="@+id/buttonRest"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:textSize="24sp"
                android:backgroundTint="@color/naranja"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonC"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#FF5722"
                android:text="C"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button0"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:textSize="24sp"
                android:backgroundTint="#0092D3"
                android:text="0" />

            <Button
                android:id="@+id/buttonComa"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/naranja"
                android:text="."
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:backgroundTint="#23A908"
                android:text="="
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="345dp"
        android:layout_height="72dp"
        android:layout_marginBottom="68dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="(23*45)/15" />
</androidx.constraintlayout.widget.ConstraintLayout>